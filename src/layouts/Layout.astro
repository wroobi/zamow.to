---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="flex items-center justify-between px-4 py-2 border-b border-neutral-200">
      <a href="/" class="font-semibold">zamow.to</a>
      {
        user ? (
          <div class="flex items-center gap-3">
            <span class="text-sm text-neutral-700">{user.email ?? "UÅ¼ytkownik"}</span>
            <form method="post" action="/api/auth/logout">
              <button type="submit" class="text-sm text-neutral-700 hover:underline">
                Wyloguj
              </button>
            </form>
          </div>
        ) : (
          <div class="flex items-center gap-3">
            <a href="/auth/login" class="text-sm text-neutral-700 hover:underline">
              Zaloguj
            </a>
            <a href="/auth/register" class="text-sm text-neutral-700 hover:underline">
              Rejestracja
            </a>
          </div>
        )
      }
    </header>
    <main>
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
